<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:adjustViewBounds="true"
    android:background="@color/viewBg">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_height="@dimen/trailer_image_height"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_marginSmall"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewBg">

            <ImageView
                android:layout_width="@dimen/trailer_image_width"
                android:layout_height="@dimen/trailer_image_height"
                android:gravity="center"
                android:src="@drawable/youtube"
                android:id="@+id/imageView"
                android:layout_marginLeft="@dimen/layout_marginMedium"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_padding"
                android:paddingRight="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding"
                android:textColor="@color/whiteBlack"
                android:textSize="@dimen/tx_sizeSmall"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
